<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ChessMemoryApp.CalculationTrainerPage"
             Background="{StaticResource Black}"
             Title="CalculationTrainerPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition x:Name="columnChessBoard"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <AbsoluteLayout x:Name="mainChessBoard"
                        x:DataType="AbsoluteLayout"
                        Grid.Row="0"
                        Grid.Column="1"
                        Margin="0, 10, 0, 10"/>

    </Grid>
</ContentPage>